<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_light">


        <Button
            android:id="@+id/Request"
            style="@android:style/ButtonBar"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_below="@+id/PatientPhone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/button"
            android:clickable="true"
            android:text="Request Appointment"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"
            android:textColor="@android:color/background_light" />


        <EditText
            android:id="@+id/RPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/RAppointmentTime"
            android:layout_alignLeft="@+id/RAppointmentTime"

            android:layout_alignRight="@+id/RAppointmentTime"
            android:layout_alignStart="@+id/RAppointmentTime"
            android:layout_below="@+id/textView6"
            android:ems="12"
            android:focusable="false"
            android:hint="Patient Name"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/background_light"
            android:textSize="@dimen/activity_vertical_margin" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="5dp"
            android:background="@android:color/background_dark"
            android:orientation="horizontal">


        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:text="Appointment Request"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/abc_action_bar_subtitle_text_size"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/RDoctor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/RAppointmentDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/RAppointmentDate"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/background_light"
            android:focusable="false"
            android:spinnerMode="dialog">

        </Spinner>

        <EditText
            android:id="@+id/PatientPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/RAppointmentTime"
            android:layout_alignLeft="@+id/RPatientName"
            android:layout_alignRight="@+id/RAppointmentTime"
            android:layout_below="@+id/textView9"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:focusable="false"
            android:hint="Patient Contact no 07961279239"
            android:phoneNumber="true"
            android:textColorHint="@android:color/background_light"
            android:textSize="@dimen/activity_vertical_margin"
            android:inputType="number|textPhonetic" />

        <EditText
            android:id="@+id/RAppointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RAppointmentDate"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="false"
            android:text="17:00"
            android:textSize="@dimen/activity_vertical_margin" />

        <EditText
            android:id="@+id/RAppointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/RAppointmentTime"
            android:layout_alignLeft="@+id/RAppointmentTime"
            android:layout_alignRight="@+id/RAppointmentTime"
            android:layout_alignStart="@+id/RAppointmentTime"
            android:layout_below="@+id/textView4"
            android:clickable="true"
            android:focusable="false"
            android:text="22-05-2015"
            android:textSize="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="Select Doctor"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/abc_action_bar_title_text_size"
            android:layout_below="@+id/linearLayout"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Appointment Date"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/RDoctor"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Appointment Time"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/RAppointmentDate"
            android:layout_alignLeft="@+id/RDoctor"
            android:layout_alignStart="@+id/RDoctor" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/RAppointmentTime"
            android:text="Patient Name"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_alignLeft="@+id/textView6"
            android:layout_below="@+id/RPatientName"
            android:text="Patient Contact No"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/background_light" />


    </RelativeLayout>

</RelativeLayout>

