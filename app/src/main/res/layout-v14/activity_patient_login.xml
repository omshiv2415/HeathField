<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:visibility="visible"
    tools:context="com.viral.omshiv.user.HomePage">


    <EditText
        android:id="@+id/usernameLoginTextBox"
        style="@android:style/Animation.Toast"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="63dp"
        android:autoText="true"
        android:background="@drawable/username"
        android:focusable="true"
        android:hint="Patient Login ID"
        android:inputType="text"
        android:maxLength="@integer/restrictuser"
        android:paddingLeft="15dp"
        android:textColor="@android:color/darker_gray"

        android:textColorHint="@android:color/darker_gray"
        android:textIsSelectable="false"
        android:textSize="@dimen/activity_horizontal_margin" />

    <EditText
        android:id="@+id/passwordLoginTextBox"
        style="@android:style/Animation.Toast"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usernameLoginTextBox"
        android:layout_gravity="center_horizontal"
        android:autoText="true"
        android:background="@drawable/username"
        android:drawableRight="@android:drawable/ic_lock_lock"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="@integer/password"
        android:paddingLeft="15dp"
        android:password="true"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textIsSelectable="false"
        android:textSize="@dimen/activity_horizontal_margin" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/reset"
        android:layout_alignRight="@+id/reset"
        android:layout_below="@+id/passwordLoginTextBox"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:background="@drawable/button"

        android:singleLine="false"
        android:text="Login"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/createAccountbtnLogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="45dp"

        android:background="@drawable/button"
        android:text="Patient Registration"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/reset"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:layout_alignEnd="@+id/createAccountbtnLogin"
        android:layout_alignRight="@+id/createAccountbtnLogin"
        android:layout_below="@+id/loginBtn"
        android:layout_marginTop="63dp"
        android:background="@android:color/transparent"
        android:text="Forgotten your password ?"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/activity_vertical_margin"
        android:visibility="visible"
        android:textStyle="normal|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient "
        android:id="@+id/textView"
        android:textSize="@dimen/heath"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock2"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/heath"
        android:layout_above="@+id/createAccountbtnLogin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
