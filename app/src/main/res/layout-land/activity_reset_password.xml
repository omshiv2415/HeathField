<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:visibility="visible"
    tools:context="com.viral.omshiv.user.HomePage">


    <EditText

        android:id="@+id/Email"
        style="@android:style/Animation.Toast"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/passreset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="74dp"
        android:autoText="true"
        android:background="@drawable/username"
        android:focusable="true"
        android:hint="Email Address"
        android:inputType="text"
        android:maxLength="@integer/restrictuser"
        android:paddingLeft="15dp"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textIsSelectable="false"
        android:textSize="@dimen/activity_horizontal_margin" />

    <Button
        android:id="@+id/passreset"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:singleLine="false"

        android:text="Reset Password"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Heath Field Surgery"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</RelativeLayout>
